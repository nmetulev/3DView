<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lib">

    <Style TargetType="local:Object3D" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Object3D">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <WebView x:Name="View" DefaultBackgroundColor="Transparent"></WebView>
                            <ProgressRing x:Name="LoadingRing" Visibility="Collapsed" IsActive="False" />
                        </Grid>
                        
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
